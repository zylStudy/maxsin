<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_suggestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.renyi.maxsin.module.me.SuggestionActivity">

    <RelativeLayout
        android:id="@+id/rel01"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/tv"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shap_login_layout">


        <EditText
            android:id="@+id/et_info"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/bt_clear_phone"
            android:layout_toRightOf="@+id/hPhone"
            android:background="@null"
            android:gravity="top|left"
            android:hint="请输入您的反馈意见，我们会及时和您取得联系"
            android:textColor="@color/color3"
            android:textColorHint="@color/color9"
            android:lineSpacingExtra="3dp"
            android:textSize="15sp"/>


    </RelativeLayout>
</RelativeLayout>
