<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorf0f4"
    >


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/rel"
        android:layout_marginTop="15dp"
        />

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/shap_layout">

        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/head_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="80dp"
            android:background="@color/white"
            >

            <TextView
                android:id="@+id/school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:maxLines="1"
                android:textColor="@color/color3"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eschool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/school"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="3dp"
                android:maxLines="1"
                android:textColor="@color/color9"
                android:textSize="12sp"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/head_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:scaleType="centerCrop"
            />


        <RelativeLayout
            android:id="@+id/type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head_rel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="6dp"
            >

            <TextView
                android:id="@+id/course_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址："
                android:textColor="@color/color3"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/course_type"
                android:layout_toRightOf="@+id/course_type"
                android:textColor="@color/color6"
                android:textSize="12sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sch_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_layout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/tv01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优势专业："
                android:textColor="@color/color3"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv01"
                android:maxLines="1"
                android:textColor="@color/color6"
                android:textSize="12sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sch_layout"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/sch_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语言要求："
                android:textColor="@color/color3"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sch_tv"
                android:maxLines="1"
                android:textColor="@color/color6"
                android:textSize="12sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout01"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/tv02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请截止日期："
                android:textColor="@color/color3"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv02"
                android:maxLines="1"
                android:textColor="@color/color6"
                android:textSize="12sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout02"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/tv03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请难度："
                android:textColor="@color/color3"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/difficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv03"
                android:maxLines="1"
                android:textColor="@color/color6"
                android:textSize="12sp"/>


        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>