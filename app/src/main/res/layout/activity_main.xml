<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.renyi.maxsin.MainActivity">


    <FrameLayout
        android:id="@+id/main_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_above="@+id/munu_layout"
        android:background="#f0f4f7"/>

    <LinearLayout
        android:id="@+id/munu_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/color3"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/first_rel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onClick"
            >

            <ImageView
                android:id="@+id/first_image_hl"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_main_tab_first_hl"
                />

            <ImageView
                android:id="@+id/first_image_nor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_main_tab_first_nor"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_image_nor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="首页"
                android:textColor="@color/colorf0"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two_rel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onClick"
            >

            <ImageView
                android:id="@+id/two_image_hl"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@mipmap/ic_main_tab_two_hl"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/two_image_nor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:background="@mipmap/ic_main_tab_two_nor"/>

            <TextView
                android:id="@+id/two_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/two_image_nor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="资讯"
                android:textColor="@color/color9"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/four_rel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:onClick="onClick"
